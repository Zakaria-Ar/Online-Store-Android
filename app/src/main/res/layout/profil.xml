<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
         android:background="@color/white"
        tools:ignore="ExtraText">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200px"
        android:gravity="center"
        android:text="My Profil"
        android:textColor="#090909"
        android:textSize="70px"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_weight="1"
            android:layout_marginTop="70px"
            app:srcCompat="@drawable/someone" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="99dp"
        android:layout_height="50dp"
        android:layout_marginLeft="450px"
        android:layout_marginTop="-1050px"
        android:text="Username"
        android:textSize="50px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp">



        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_weight="1"
            android:layout_marginLeft="250px"
            android:textColor="#090909"
            android:textSize="45px"

            android:text="Location" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_weight="1"
            android:textColor="#090909"
            android:textSize="45px"

            android:text="Location link" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp">



        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_weight="1"
            android:layout_marginLeft="250px"
            android:textColor="#090909"
            android:textSize="45px"

            android:text="Phone Number" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_weight="1"
            android:textColor="#090909"
            android:textSize="45px"

            android:text=" 0676829102" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp">



        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_weight="1"
            android:layout_marginLeft="250px"
            android:textColor="#090909"
            android:textSize="45px"

            android:text="email" />
        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_weight="1"
            android:textColor="#090909"
            android:textSize="45px"

            android:text=" username@gmail.com" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp">



        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_weight="1"
            android:layout_marginLeft="250px"
            android:textColor="#090909"
            android:textSize="45px"

            android:text="Country" />
        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_weight="1"
            android:textColor="#090909"
            android:textSize="45px"

            android:text=" Morocco" />

    </LinearLayout>

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_marginLeft="380px"
        android:layout_marginTop="200px"
        android:textColor="@color/black"
        android:background="#FF7A00"
        android:gravity="center"




        android:layout_height="40dp"
        android:text="Visit my Profile"
        android:textSize="40px"

        />

</LinearLayout>

